<%- include('../partials/header.ejs')%>
    <main>
        <h2>
            <%=user.firstName + "'s Connections" %>
        </h2>
        <table>
            <%if(connections.length){%>
                <thead>
                    <th>Connection</th>
                    <th>Topic</th>
                    <th>Actions</th>
                </thead>
                <%connections.forEach(connection=> {%>
                    <tbody>
                        <tr>
                            <td>
                                <a href='/connections/<%=connection.id%>'>
                                    <%=connection.title%>
                                </a>
                            </td>
                            <td>
                                <%=connection.topic%>
                            </td>
                            <td>
                                <form>
                                    <button type="submit" formmethod="GET" class="button"
                                        formaction="/connections/<%=connection.id%>/edit">Update</button>
                                    <button type="submit" formmethod="POST" class="button"
                                        formaction="/connections/<%=connection.id%>?_method=DELETE">Delete</button>
                                </form>
                            </td>
                        </tr>
                    </tbody>
                    <%}); } else {%>
                        <p>You have not created any connections</p>
                        <%}%>
        </table>
        <%if(rsvps.length) {%>
            <h2>
                <%=user.firstName%>'s RSVPs
            </h2>
            <table>
                <thead>
                    <th>Connection</th>
                    <th>Category</th>
                    <th>Attending</th>
                </thead>
                <%rsvps.forEach(rsvp=>{%>
                    <tr>
                        <td><a <%=rsvp.connection.title%>
                            </a></td>
                        <td><a href="/connections">
                                <%=rsvp.connection.topic%>
                            </a></td>
                        <td>
                            <%=rsvp.status%>
                        </td>
                    </tr>
                    <%});%>
            </table>
            <%} else {%>
                <p class="align-center">You have not RSVP'd for any connections.</p>
                <%}%>
    </main>
    <br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br>
    <%- include('../partials/footer.ejs')%>